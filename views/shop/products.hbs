<!-- Product -->
<div class="bg0 m-t-23 p-b-140">
    <div class="container">
        <div class="row isotope-grid">
            {{# each products }}
            <div class="col-sm-12 col-md-6 col-lg-6 p-b-35 isotope-item women">
                <!-- Block2 -->
                <div class="block2">
                    <div class="block2-pic hov-img0">
                        <img src="{{ this.imagePath }}" alt="IMG-PRODUCT">
                        <a href="/add-to-cart/{{ this.id }}" class="block2-btn flex-c-m stext-103 cl2 size-102 bg0 bor2 hov-btn1 p-lr-15 trans-04"><i class="zmdi zmdi-shopping-cart"></i> Add to cart</a>
                    </div>
                    <div class="block2-txt flex-w flex-t p-t-14">
                        <div class="block2-txt-child1 flex-col-l ">
                            <p class="mtext-101 cl4 hov-cl1 trans-04 js-name-b2 p-b-6">
                                {{ this.title }}
                            </p>
                            <span class="ltext-101 cl3">
                                {{ this.price }} $
                            </span>
                        </div>

                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>

